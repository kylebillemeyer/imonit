<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>I&#39;m On It</title>
  <link href='http://fonts.googleapis.com/css?family=Raleway:400,700|Open+Sans:400,700' rel='stylesheet' type='text/css'>
</head>

<body>

<div class="imonit">
	<header class="head">
		<h1>i&#39;m on it</h1>
	</header>
	
	<ul class="nav">
		<li><a href="#"><%= image_tag("settings.png") %></a></li>
		<li><a href="#">Money</a></li>
		<li><a href="#">Inventory</a></li>
		<li><a href="#">Lists</a></li>
	</ul>
	
	<% @trackings.each do |tracking| %>
		<section class="person">

			<div>
				<%= tracking.item.name %>
			</div>

			<div class="icon">
			</div>

			<% if tracking.count < tracking.threshold %>
				<div class="balanceRed">
				</div>
				
				<div class="amountRed">
					<%= tracking.count %>
				</div>
			<% else %>
				<div class="balanceGreen">
				</div>
				
				<div class="amountGreen">
					<%= tracking.count %>
				</div> 
			<% end %>			
			
			<ul class="links">
				<li><a href="#">Subscriptions</a></li>
				<li><a href="#">History</a></li>
				<li><a href="#">Make Payment</a></li>
			</ul>
		</section>
	<% end %>

	<section class="foot">
		<%= image_tag("scott.jpg") %>
	</section>
	
</div>

</body>

</html>